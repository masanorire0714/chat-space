%body
  .Side-bar
    .Side-bar__user
      .top-items
        %p.top-items__name 
        = current_user.name
      .side-icon
        = link_to new_group_path, class: "side-icon__btn" do
          = icon('fa', 'edit')
        = link_to edit_user_path (current_user) do
          = icon('fa',  'cog') 
    .group-list
      - current_user.groups.each do |group|
        .side-list
          = link_to group_messages_path(group) do
            .side-list__name
              = group.name
            .side-list__information
              = group.show_last_message
    